<!DOCTYPE html>
<html>
<head>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f8f9fa;
    }

    .navbar {
      background-color: #0f5298;
    }

    .navbar-brand {
      font-size: 24px;
      color: #fff;
    }

    .container {
      max-width: 960px;
    }

    h1 {
      font-size: 28px;
      margin-bottom: 1rem;
      color: #0f5298;
    }

    h3 {
      font-size: 18px;
      color: #333;
      margin-bottom: 1rem;
    }

    .client-item {
      display: flex;
      justify-content: space-between;
      background-color: #fff;
      border: 1px solid #e9ecef;
      padding: 1rem;
      border-radius: 4px;
      margin-bottom: 0.5rem;
      font-size: 14px;
      color: #333;
    }

    .client-item:hover {
      background-color: #e9ecef;
      cursor: pointer;
    }

    .client-balance {
      margin-left: auto;
      white-space: nowrap;
    }

    a {
      text-decoration: none;
      color: inherit;
    }
  </style>
</head>
<body>
  <nav class="navbar navbar-expand-lg">
    <div class="container">
      <a class="navbar-brand" href="/home">IMS Bank</a>
    </div>
  </nav>
  <div class="container mt-5">
    <h1>All Clients</h1>
    <h3>Select Client</h3>
    <div>
      <% clients.forEach(function(client) { %>
        <a href="/clients/<%= client._id %>" class="client-item">
          <span>Name: <%= client.name %></span>
          <span class="client-balance">Balance: <%= client.balance %></span>
        </a>
      <% }); %>
    </div>
  </div>
</body>
</html>
